@model InternsMS.Models.EvaluationSheet

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-area="" asp-controller="EvaluationSheets" asp-action="Index">Evaluation Sheets</a></li>
                <li class="breadcrumb-item text-decoration-underline">Delete Evaluation Sheet @Model.Id</li>
            </ol>
        </nav>
    </div>
</nav>
<h1>Are you sure you want to delete this Evaluation Sheet @Model.Id ?</h1>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 mt-4">
            @Html.DisplayNameFor(model => model.Intern)
        </dt>
        <dd class = "col-sm-10 mt-4">
            @Html.DisplayFor(model => model.Intern.Name)
        </dd>
        <dt class = "col-sm-2 mt-4">
            @Html.DisplayNameFor(model => model.Assignment)
        </dt>
        <dd class = "col-sm-10 mt-4">
            @Html.DisplayFor(model => model.Assignment.Title)
        </dd>
        <dt class = "col-sm-2 mt-4">
            @Html.DisplayNameFor(model => model.Supervisor)
        </dt>
        <dd class = "col-sm-10 mt-4">
            @Html.DisplayFor(model => model.Supervisor.Name)
        </dd>
        <dt class = "col-sm-2 mt-4">
            @Html.DisplayNameFor(model => model.Score)
        </dt>
        <dd class = "col-sm-10 mt-4">
            @Html.DisplayFor(model => model.Score)
        </dd>
        <dt class = "col-sm-2 mt-4">
            @Html.DisplayNameFor(model => model.Comments)
        </dt>
        <dd class = "col-sm-10 mt-4">
            @Html.DisplayFor(model => model.Comments)
        </dd>
    </dl>
    
    <div class="mt-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" style="width:200px" />
            <a asp-action="Index" class="btn btn-info" style="width:200px">Back to List</a>
        </form>
    </div>
</div>
