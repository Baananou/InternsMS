@model InternsMS.Models.Assignment

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-area="" asp-controller="Assignments" asp-action="Index">Assignments</a></li>
                <li class="breadcrumb-item text-decoration-underline">Create new assignment</li>
            </ol>
        </nav>
    </div>
</nav>
<h1>Create new assignment</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mt-4">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="InternshipId" class="control-label">Pick Internship</label>
                <select asp-for="InternshipId" class="form-control" asp-items="ViewBag.InternshipId"></select>
                <span asp-validation-for="InternshipId" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="SupervisorId" class="control-label">Pick Supervisor</label>
                <select asp-for="SupervisorId" class="form-control" asp-items="ViewBag.SupervisorId"></select>
                <span asp-validation-for="SupervisorId" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="InternId" class="control-label">Pick Intern</label>
                <select asp-for="InternId" class="form-control" asp-items="ViewBag.InternId"></select>
                <span asp-validation-for="InternId" class="text-danger"></span>
            </div>
            <div class="form-group mt-5">
                <input type="submit" value="Create" class="btn btn-success" style="width:200px" />
                <a asp-action="Index" class="btn btn-info" style="width:200px">Back to List</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
